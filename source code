//ELECTRICITY BILL CALCULATOR
//AUTHOR:BHAKKTI GAUTAM
//DESCRIPTION:A menu-driven Electricity Billing System written in C using structures. The project allows adding, viewing, updating, deleting customer accounts and generating electricity bills based on units consumed.
#include<stdio.h>
#include<string.h>
//STRUCTURE TO STORE CUSTOMER DETAILS
struct customer{
        char name[50];
        char mobilenumber[15];
        int unitsconsumed;
        int bill;
};
struct customer
        customer[100];
        int customercount=0;
//FUNCTION TO ADD A NEW ACCOUNT
void addaccount()
{
        if(customercount<100)
        {
                printf("\nENTER NAME OF ACCOUNT HOLDER:");
                scanf("%s",customer[customercount].name);
                printf("\nENTER MOBILE NUMBER :");
                scanf("%s",customer[customercount].mobilenumber);
                printf("\nENTER UNITS CONSUMED :");
                scanf("%d",&customer[customercount].unitsconsumed);
                customer[customercount].bill=customer[customercount].unitsconsumed*10;
                customercount++;
                printf("ACCOUNT ADDED");
        }
        else
        {
                printf("THE NUMBER OF ACCOUNT REACHED MAXIMUM LIMIT");
        }
}
//FUNCTION TO VIEW ACCOUNTS
void viewaccounts()
{
        printf("\nNAME\tMOBILE NUMBER\tUNITS CONSUMED\tBILL");
        for( int i=0;i<customercount;i++)
        {
                printf("\n%s",customer[i].name);
                printf("\t%s",customer[i].mobilenumber);
                printf("\t%d",customer[i].unitsconsumed);
                printf("\t%d\n",customer[i].bill);
        }
}
//FUNCTION TO UPDATE AN ACCOUNT
void updateaccount(char name[])
{
        int found=0;
        for( int i=0;i<customercount;i++)
        {

                if(strcmp(customer[i].name,name)==0)
                {
                        printf("ENTER NEW UNITS CONSUMED ");
                        scanf("%d",&customer[i].unitsconsumed);
                        customer[i].bill=customer[i].unitsconsumed*10;
                        printf("ACCOUNT UPDATED");
                        found=1;
                        break;
                }


        }
        if(found==0)
        {
                printf("ACCOUNT NOT FOUND\n");
        }

}
//FUNCTION TO VIEW BILL OF PARTICULAR ACCOUNT
void viewbill(char name[])
{
        int found=0;
        for(int i=0;i<customercount;i++)
        {

                if(strcmp(customer[i].name,name)==0)
                {
                        printf("\n%s\t%s\t%d\t%d\n",customer[i].name,customer[i].mobilenumber,customer[i].unitsconsumed,customer[i].bill);
                        found=1;
                break;
                }

        }
        if(found==0)
        {
                printf("ACCOUNT NOT FOUND\n");
        }

}
//FUNCTION TO DELETE AN ACCOUNT
void deleteaccount(char name[])
{
        int i,k,found=0;
        for(i=0;i<customercount;i++)
        {
                if(strcmp(customer[i].name,name)==0)
                {
                        for(k=i;k<customercount-1;k++)
                        {
                                customer[k]=customer[k+1];
                        }
                        customercount--;
                        printf("\nACCOUNT DELETED");
                        found=1;
                        break;
                }

        }
        if(found==0)
        {
                printf("\nACCOUNT NOT FOUND");
        }
}
//Main function with menu-driven program
int main()
{
        int options;
        char name[50];
        do{
        printf("ENTER THE SERIAL NUMBER OF OPERATION YOU WANT TO ATTEND IN ACCOUNT\n");
        printf("1.I WANT TO ADD AN ACCOUNT\n2.I WANT TO VIEW AN ACCOUNT\n.3.I WANT TO UPDATE AN ACCOUNT\n4.I WANT TO VIEW BILL OF AN ACCOUNT\n5.I WANTTO DELETE AN ACCOUNT\n6.EXIT THE PROGRAM\n");
        scanf("%d",&options);
        if(options==1)
        {
                addaccount();
        }
        else if(options==2)
        {
                viewaccounts();
        }
        else if(options==3)
        {
                printf("ENTER NAME TO UPDATE ACCOUNT:");
                scanf("%s",name);
                updateaccount(name);
        }
        else if(options==4)
        {
                printf("ENTER NAME TO VIEW BILL");
                scanf("%s",name);
                viewbill(name);
        }
        else if(options==5)
        {
                printf("ENTER THE ACCOUNT YOU WANT TO DELTETE:");
                scanf("%s",name);
                deleteaccount(name);
        }
        else if(options==6)
         {
                break;
        }
        else

        {
                printf("THE SELECTED OPTION IS INVALID");
        }
        }while(options!=6);

return 0;//END OF PROGRAM
}


